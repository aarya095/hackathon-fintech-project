datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int           @id @default(autoincrement())
  name      String
  email     String        @unique
  password  String
  timezone  String

  loansGiven  Arrangement[] @relation("LoansGiven")
  loansTaken  Arrangement[] @relation("LoansTaken")
}

model Arrangement {
  id             Int      @id @default(autoincrement())
  title          String
  totalAmount    Float
  currency       String
  expectedBy     DateTime?
  repaymentStyle String
  note           String?
  status         String   @default("pending")

  lenderId       Int
  lender         User     @relation("LoansGiven", fields: [lenderId], references: [id])
  borrowerId     Int
  borrower       User     @relation("LoansTaken", fields: [borrowerId], references: [id])
}
